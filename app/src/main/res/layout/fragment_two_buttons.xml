<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".twoButtons">

    <Button
        android:id="@+id/left_button"
        android:layout_toLeftOf="@id/center_H"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Extend ignore mode"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_marginRight="6dp"
        android:background="@drawable/curved_button_left"
        app:backgroundTint="#00000000"
        android:alpha="1"
        />

    <View
        android:id="@+id/center_H"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/right_button"
        android:layout_toRightOf="@id/center_H"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="End ignore mode"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_marginLeft="6dp"
        android:background="@drawable/curved_button_right"
        app:backgroundTint="#00000000"
        android:alpha="1"
        />

</RelativeLayout>