<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/center_H"
        android:layout_width="4dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        android:id="@+id/center_left_H"
        android:layout_width="4dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center_H"
        app:layout_constraintTop_toTopOf="parent"
        />




    <View
        android:id="@+id/center_right_H"
        android:layout_width="4dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/center_H"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/four_button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/center_left_H"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="BT1"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginRight="6dp"
        />



    <Button
        android:id="@+id/four_button2"
        app:layout_constraintLeft_toLeftOf="@id/center_left_H"
        app:layout_constraintRight_toRightOf="@id/center_H"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="BT2"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginRight="6dp"
        />



    <Button
        android:id="@+id/four_button3"
        app:layout_constraintLeft_toLeftOf="@id/center_H"
        app:layout_constraintRight_toRightOf="@id/center_right_H"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="BT3"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginRight="6dp"
        />



    <Button
        android:id="@+id/four_button4"
        app:layout_constraintLeft_toLeftOf="@id/center_right_H"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="BT4"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginRight="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>